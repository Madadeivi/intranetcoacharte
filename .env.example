# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Supabase URL (obtenida del dashboard de Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
# Supabase Anon Key (clave p√∫blica para el cliente)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Supabase Service Role Key (SOLO para backend/funciones)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ====================================
# ZOHO OAUTH CONFIGURATION
# ====================================
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REDIRECT_URI=your_zoho_redirect_uri
ZOHO_SCOPE=ZohoCRM.modules.ALL,Desk.tickets.ALL

# ====================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ====================================
GMAIL_USER=your_gmail_address
GMAIL_APP_PASSWORD=your_gmail_app_password

# ====================================
# ENVIRONMENT
# ====================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
